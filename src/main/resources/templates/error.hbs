        "/assets/img/emoji/woozy.webp",
        "/assets/img/emoji/zip.webp",
        "/assets/img/emoji/poop.webp",
        "/assets/img/emoji/bandage.webp",
        "/assets/img/emoji/hot.webp",
        "/assets/img/emoji/cold.webp",
        "/assets/img/emoji/clown.webp",
        "/assets/img/emoji/spiral.webp",
        "/assets/img/emoji/cloudy.webp",
        "/assets/img/emoji/runner.webp",
        "/assets/img/emoji/wuaio.webp"
